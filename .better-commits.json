{
  "check_status": true,
  "commit_type": {
    "enable": true,
    "initial_value": "feat",
    "max_items": 20,
    "infer_type_from_branch": true,
    "append_emoji_to_label": true,
    "append_emoji_to_commit": true,
    "emoji_commit_position": "Start",
    "options": [
      {
        "value": "upgrade",
        "label": "⬆upgrade-dep",
        "hint": "Upgrade an existing a dependency",
        "emoji": "⬆️",
        "trailer": "Changelog: upgrade"
      },
      {
        "value": "downgrade",
        "label": "⬇downgrade-dep",
        "hint": "Downgrade an existing a dependency",
        "emoji": "⬇️",
        "trailer": "Changelog: downgrade"
      },
      {
        "value": "init",
        "label": "init",
        "hint": "start a new project",
        "emoji": "🎉",
        "trailer": "Changelog: init"
      },
      {
        "value": "build",
        "label": "build",
        "hint": "Changes that affect the build system or external dependencies",
        "emoji": "🚧",
        "trailer": "Changelog: build"
      },
      {
        "value": "docs",
        "label": "docs",
        "hint": "Documentation only changes",
        "emoji": "📚",
        "trailer": "Changelog: documentation"
      },
      {
        "value": "test",
        "label": "test",
        "hint": "Adding missing tests or correcting existing tests",
        "emoji": "🧪",
        "trailer": "Changelog: test"
      },
      {
        "value": "database",
        "label": "database-change",
        "hint": "perform a database change",
        "emoji": "🗃️",
        "trailer": "Changelog: database"
      },
      {
        "value": "format-code",
        "label": "format-code",
        "hint": "Harmonize & improve code lisibility and structure",
        "emoji": "🎨",
        "trailer": "Changelog: format-code"
      },
      {
        "value": "gitignore",
        "label": "gitignore",
        "hint": "Add or update gitignore file",
        "emoji": "🙈",
        "trailer": "Changelog: gitignore"
      },
      {
        "value": "clean",
        "label": "clean",
        "hint": "Removing code or files",
        "emoji": "🔥",
        "trailer": "Changelog: clean"
      },
      {
        "value": "refactor",
        "label": "refactor",
        "hint": "A code change that neither fixes a bug nor adds a feature",
        "emoji": "♻️",
        "trailer": "Changelog: refactor"
      },
      {
        "value": "bug",
        "label": "bug",
        "hint": "A bug",
        "emoji": "🐛",
        "trailer": "Changelog: bug"
      },
      {
        "value": "fix",
        "label": "fix",
        "hint": "A bug fix",
        "emoji": "🐸",
        "trailer": "Changelog: fix"
      },
      {
        "value": "modify",
        "label": "modify-feat",
        "hint": "Modify an existing feature",
        "emoji": "🔨",
        "trailer": "Changelog: modify"
      },
      {
        "value": "feat",
        "label": "feat",
        "hint": "A new feature",
        "emoji": "🌟",
        "trailer": "Changelog: feature"
      },
      {
        "value": "",
        "label": "none"
      }
    ]
  },
  "commit_scope": {
    "enable": true,
    "custom_scope": false,
    "max_items": 20,
    "initial_value": "app",
    "options": [
      {
        "value": "app",
        "label": "app"
      },
      {
        "value": "shared",
        "label": "shared"
      },
      {
        "value": "server",
        "label": "server"
      },
      {
        "value": "tools",
        "label": "tools"
      },
      {
        "value": "",
        "label": "none"
      }
    ]
  },
  "check_ticket": {
    "infer_ticket": true,
    "confirm_ticket": true,
    "add_to_title": true,
    "append_hashtag": false,
    "prepend_hashtag": "Never",
    "surround": "",
    "title_position": "start"
  },
  "commit_title": {
    "max_size": 120
  },
  "commit_body": {
    "enable": true,
    "required": false
  },
  "commit_footer": {
    "enable": true,
    "initial_value": [],
    "options": ["closes", "trailer", "breaking-change", "deprecated", "custom"]
  },
  "breaking_change": {
    "add_exclamation_to_title": false
  },
  "confirm_with_editor": false,
  "confirm_commit": true,
  "print_commit_output": true,
  "branch_pre_commands": [],
  "branch_post_commands": [],
  "worktree_pre_commands": [],
  "worktree_post_commands": [],
  "branch_user": {
    "enable": true,
    "required": false,
    "separator": "/"
  },
  "branch_type": {
    "enable": true,
    "separator": "/"
  },
  "branch_version": {
    "enable": false,
    "required": false,
    "separator": "/"
  },
  "branch_ticket": {
    "enable": true,
    "required": false,
    "separator": "-"
  },
  "branch_description": {
    "max_length": 120,
    "separator": ""
  },
  "branch_action_default": "branch",
  "branch_order": ["user", "version", "type", "ticket", "description"],
  "enable_worktrees": true,
  "overrides": {}
}
